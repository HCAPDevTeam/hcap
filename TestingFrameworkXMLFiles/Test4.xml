<?xml version="1.0"?>
<root>
<!-- Parameters for Authorization Server -->
	<AuthServer>
		<host> </host>
		<port> </port>
		<dtlsParams> 
			
			<trustStoreLoc> </trustStoreLoc>
			<trustStorePass> </trustStorePass>
			
			<keystoreLoc> </keystoreLoc>
			<keystorePass> </keystorePass>
		
		</dtlsParams>
		<encoding>cbor</encoding>
		
		
		<ResourceServerKey>
			<entry resourceServer="127.0.0.1:8080" key="myKey"></entry>
		</ResourceServerKey>
		
		<StateToResServer>
			<entry state="St1" server="127.0.0.1:8080"></entry>
		</StateToResServer>
		
		
		<clients>
			<client>
				<name>C=CA,L=Ottawa,O=Eclipse IoT,OU=Californium,CN=cf-client</name>
				<propagation>-1</propagation>
				
				<SA> 
					<initialState>St1</initialState>
					<states>
						<state name="St1">
							<stPerms>
							</stPerms>
					
							<transPerms> 
								<perm>1</perm>
								<perm>3</perm>
							</transPerms>
						</state>
						<state name="St2">
							<stPerms> 
								<perm>2</perm>
							</stPerms>
					
							<transPerms> 
							</transPerms>
						</state>
						<state name="St3">
							<stPerms> 
							</stPerms>
					
							<transPerms> 
							</transPerms>
						</state>
					</states>
			
					<transitions>
						<trans perm="1">
							<from>St1</from>
							<to>St2</to>
						</trans>
				
						<trans perm="3">
							<from>St1</from>
							<to>St3</to>
						</trans>

						
					</transitions>
				</SA>
			</client>
		</clients>
		
	</AuthServer>
	
<!-- Parameters for Resource Server -->		
	<ResServer>
		<host> </host>
		<port> </port>
		<hardGC> </hardGC>
		<softGC> </softGC>
		<dtlsParams> 
			
			<trustStoreLoc> </trustStoreLoc>
			<trustStorePass> </trustStorePass>
			
			<keystoreLoc> </keystoreLoc>
			<keystorePass> </keystorePass>
		
		</dtlsParams>
		<encoding>cbor</encoding>
		
		<resources>
			<resource>demoResource1</resource>
			<resource>demoResource2</resource>
			<resource>demoResource3</resource>
		</resources>
		
		<permMap>
			<entry method="POST" resource="demoResource1" perm="1" > </entry>
			<entry method="POST" resource="demoResource2" perm="2" > </entry>
			<entry method="POST" resource="demoResource3" perm="3" > </entry>
		</permMap>
	</ResServer>

<!-- Parameters for Client -->
	<Client>
		<authServerAddress> </authServerAddress>
		<resServerAddress> </resServerAddress>
		
		<dtlsParams> 
			
			<trustStoreLoc> </trustStoreLoc>
			<trustStorePass> </trustStorePass>
			
			<keystoreLoc> </keystoreLoc>
			<keystorePass> </keystorePass>
		
		</dtlsParams>
		<encoding>cbor</encoding>
		
		<clientRequests>
			<Test>
				<resource>demoResource1</resource>
				<resource>demoResource2</resource>
				<resource>demoResource2</resource>
			</Test>
			<Test>
				<resource>demoResource3</resource>
				<resource>demoResource1</resource>
			</Test>
		</clientRequests>
	
	</Client>
</root>